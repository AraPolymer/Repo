@model Model.Entities.Producttype

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateProductsType</title>
</head>
<body>

<div class="content text-right" dir="rtl">
    <div class="row">
        <div class="col-md-4">
            <br />
            <div dir="rtl" class="text-right">
                <p dir="rtl" class="text-right"> لطفا اطلاعات نوع محصول جدید را وارد نمایید.</p>
                <form asp-action="CreateProductsType">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">کد </label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">نام</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" value="Create" asp-area="Admin" asp-action="CreateProductsType" asp-controller="ProductsSettings" class="btn btn-primary">ذخیره</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<div>
    <a asp-area="Admin" asp-controller="ProductsSettings" asp-action="ProductsType">انصراف و بازگشت به لیست</a>
</div>
</div>
</body>
</html>
