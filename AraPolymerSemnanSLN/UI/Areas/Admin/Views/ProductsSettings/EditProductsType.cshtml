@model Service.ViewModels.ProducttypesViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditProductsType</title>
</head>
<body>

    <div class="content text-right" dir="rtl">
        <div class="row">
            <div class="col-md-4">
                <br />
                <div dir="rtl" class="text-right">
                    <br />
                    <form asp-action="EditProductsType">
                        <input asp-for="@Model.producttype.Serial" class="form-control" type="hidden" />
                        <div class="form-group">
                            <label class="control-label">کد </label>
                            <input asp-for="@Model.producttype.Code" class="form-control" />
                            <span asp-validation-for="@Model.producttype.Code" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">نام</label>
                            <input asp-for="@Model.producttype.Name" class="form-control" />
                            <span asp-validation-for="@Model.producttype.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" asp-area="Admin" asp-action="EditProductsType" asp-controller="ProductsSettings" class="btn btn-primary">ذخیره</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div>
            <a asp-area="Admin" asp-controller="ProductsSettings" asp-action="ProductsType">انصراف و بازگشت به لیست</a>
        </div>
    </div>
</body>
</html>
